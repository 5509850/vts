<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!-- Custom Theme -->  
  <color name="logo_background">#E6E5E4</color>
  <color name="vacationfragmentbackground">@android:color/white</color>
  <color name="vacationbackground">#E2E2E2</color>

  <style name="title_vts">
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:background">@color/background_blue</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">70dp</item>
    <item name="android:textSize">22dp</item>
  </style>

  <style name="error_color">
    <item name="android:textColor">#EB6A5A</item>
    <item name="android:textSize">@dimen/vacDetailsTextSizeSmall</item>
  </style>
  
  <style name="login_textedit">
    <item name="android:textColor">#000000</item>
    <item name="android:background">#FFFFFF</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:singleLine">true</item>
    <item name="android:autoText">false</item>    
  </style>

  <style name="login_button">
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:background">#A3C644</item>
    <item name="android:textStyle">bold</item>    
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:layout_marginBottom">10dp</item>
  </style>  

  <style name="EpamConfidential">
    <item name="android:textColor">#B6AAAA</item>       
    <item name="android:textSize">12dp</item> 
    <item name="android:gravity">center_horizontal|center_vertical</item>      
    <item name="android:fontFamily">sans-serif-condensed</item>    
  </style>

  <style name="ProfileImage">    
    <item name="android:layout_width">70dp</item>
    <item name="android:layout_height">70dp</item>    
  </style>
  
  <style name="VacationType">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>   
    <item name="android:lineSpacingExtra">3dp</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:textColor">#EEEEEE</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">22dp</item>
    <item name="android:fontFamily">sans</item>
  </style>

  <style name="VacationDate">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>    
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingTop">40dp</item>
    <item name="android:textColor">#AAAAAA</item>    
    <item name="android:textSize">16dp</item>
    <item name="android:fontFamily">sans</item>
  </style>

  <style name="VacationStatusImages">
    <item name="android:layout_width">25dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingRight">10dp</item>   
    <item name="android:layout_centerVertical">true</item>
  </style>    

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/background_blue</item>
    <item name="drawerArrowStyle">@style/MyDrawerArrowStyle</item>
  </style>
  <style name="MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="color">#F5F5F5</item>
    <item name="spinBars">true</item>
  </style>
  <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
    <item name="android:actionBarStyle">@style/MyActionBar</item>
  </style>
  <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">#009900</item>
  </style>

  <style name="CreateScreenView">
    <item name="android:background">@android:color/darker_gray</item>
  </style>


  <style name="left_drawer">
    <item name="android:layout_width">240dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_gravity">start</item>
    <item name="android:choiceMode">singleChoice</item>
    <item name="android:divider">@color/Black</item>
    <item name="android:dividerHeight">2dp</item>
    <item name="android:background">@color/lightgray</item>
  </style>
  
  <style name="right_drawer">
    <item name="android:layout_width">240dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_gravity">right</item>
    <item name="android:choiceMode">singleChoice</item>
    <item name="android:divider">@color/Black</item>
    <item name="android:dividerHeight">2dp</item>
    <item name="android:background">@color/lightgray</item>
  </style>

  <style name="blue_button">
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:background">#27ABC0</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:layout_marginBottom">10dp</item>
  </style>

  <style name="vac_text">
    <item name="android:textColor">@color/Black</item>
    <item name="android:textSize">@dimen/vacDetailsTextSize</item>
  </style>

  <style name="ok_button">
    <item name="android:textColor">#ffffff</item>
    <item name="android:background">@drawable/button</item>
  </style>

  <style name="cancel_button">
    <item name="android:textColor">#ffffff</item>
    <item name="android:background">@drawable/button_cancel</item>
  </style>

  <!-- ActionBar styles -->  
  <style name="CustomActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">@color/actionbar_background</item>
    <item name="android:backgroundStacked">@color/tab_bar_background</item>
    <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
  </style>

  <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/text_color</item>
    <item name="android:fontFamily">sans-serif-condensed</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">@dimen/text_size_title_actionbar</item>
  </style>

  <style name="MyActionBar.MenuTextStyle" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/text_color</item>
    <item name="android:fontFamily">sans-serif-condensed</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">@dimen/text_size_title_actionbar</item>
  </style>


  <style name="CustomActionBar.Tab" parent="@android:style/Widget.Holo.ActionBar.TabView">
    <item name="android:background">@drawable/tab_bar_background</item>
  </style>

  <!-- ActionBar tabs text styles -->
  <style name="CustomActionBar.TabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
    <item name="android:textColor">@color/text_color</item>
  </style>
  <!-- End ActionBar styles -->
  
</resources>
